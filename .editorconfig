root = true

# =====================
# 全局默认
# =====================
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# =====================
# Solidity
# =====================
[*.sol]
indent_size = 4

# =====================
# Go
# =====================
[*.go]
indent_style = tab

# =====================
# Frontend
# =====================
[*.{js,ts,jsx,tsx,json,css,scss,html}]
indent_size = 2

# =====================
# Markdown
# =====================
[*.md]
trim_trailing_whitespace = false
